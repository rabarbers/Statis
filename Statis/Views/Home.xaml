                    <sdk:Label Canvas.Left="37" Canvas.Top="167" Content="uzvārds:" Name="label5" />
                    <TextBox Canvas.Left="97" Canvas.Top="163" Height="24" Name="registerSurname" Width="120" />
                    <Button Canvas.Left="206" Canvas.Top="243" Content="gribu reģistrēties" Height="23" Name="registerButton" Click="registerButton_Click" />
                    <sdk:Label Canvas.Left="37" Canvas.Top="205" Content="e-pasts:" Name="label6" />
