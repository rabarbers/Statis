<UserControl x:Class="Statis.Views.TextChoiceViewForAnswer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:View="clr-namespace:Statis.Views" mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="400">
    
    <RadioButton GroupName="{Binding Group}" HorizontalAlignment="Left" VerticalAlignment="Center"
                     IsChecked="{Binding Answer, Mode=TwoWay}" Content="{Binding Text}"/>
</UserControl>
